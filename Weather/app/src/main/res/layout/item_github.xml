<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:src="@drawable/githublogo" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo"
            android:layout_toRightOf="@id/logo"
            android:text="Name:" />

        <TextView
            android:id="@+id/city_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/city"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/city" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/city"
            android:layout_below="@+id/city"
            android:text="Address:" />

        <TextView
            android:id="@+id/date_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/date"
            android:layout_below="@+id/date" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/date_res"
            android:layout_below="@+id/date_res"
            android:text="Language:" />

        <TextView
            android:id="@+id/temp_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/temp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/temp" />

        <TextView
            android:id="@+id/is_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/temp"
            android:layout_below="@+id/temp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>